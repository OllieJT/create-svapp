{
	"name": "create-sva",
	"version": "0.1.9",
	"description": "Create web application with the create-sva CLI",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/olliejt/create-sva.git",
		"directory": "cli"
	},
	"keywords": [
		"create-sva",
		"Svelte App",
		"svelte stack",
		"svelte",
		"tailwind",
		"typescript",
		"svelte auth"
	],
	"exports": "./dist/index.js",
	"bin": {
		"create-sva": "./dist/index.js"
	},
	"files": [
		"dist",
		"template",
		"README.md",
		"LICENSE",
		"CHANGELOG.md",
		".yarnrc.yml",
		"package.json"
	],
	"scripts": {
		"typecheck": "tsc --noEmit",
		"build:css": "npx tailwind -i ./template/extras/src/tailwind.pcss -o ./template/base/src/app.pcss",
		"build:readme": "cp -f ../README.md ./",
		"build": "tsup",
		"dev": "tsup --watch",
		"clean": "rm -rf dist .turbo node_modules",
		"start": "node dist/index.js",
		"lint": "eslint .",
		"lint:fix": "pnpm lint --fix",
		"format": "prettier '**/*.{cjs,mjs,ts,svelte,md,json}' --ignore-path ../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --write",
		"format:check": "prettier '**/*.{cjs,mjs,ts,svelte,md,json}' --ignore-path ../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --check",
		"release": "changeset version",
		"pub:beta": "pnpm build && npm publish --tag beta",
		"pub:next": "pnpm build && npm publish --tag next",
		"pub:release": "pnpm build && npm publish"
	},
	"packageManager": "pnpm@8.15.6",
	"engines": {
		"node": ">=18.17.0"
	},
	"dependencies": {
		"@clack/core": "^0.3.4",
		"@clack/prompts": "^0.7.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.2.1",
		"chalk": "5.3.0",
		"commander": "^12.1.0",
		"execa": "^9.3.0",
		"fs-extra": "^11.2.0",
		"gradient-string": "^2.0.2",
		"just-merge": "^3.2.0",
		"ora": "8.0.1",
		"sort-package-json": "^2.10.0"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/gradient-string": "^1.1.6",
		"@types/node": "^20.14.9",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"tailwindcss": "^3.4.4",
		"tsup": "^8.1.0",
		"type-fest": "^4.20.1",
		"typescript": "^5.5.3"
	}
}
